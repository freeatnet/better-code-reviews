<!doctype html>
<html>
  <head>
    <meta content="IE=edge" http-equiv="X-UA-Compatible">
    <meta charset="utf-8">
    <meta name="viewport"
          content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "Middleman" %></title>

    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
    <script type="text/javascript">
      // Load the Visualization API and the corechart package.
      google.charts.load('current', {'packages':['corechart']});

      // Set a callback to run when the Google Visualization API is loaded.
      google.charts.setOnLoadCallback(drawChart);

      // Callback that creates and populates a data table,
      // instantiates the pie chart, passes in the data and
      // draws it.
      function drawChart() {
        // Create the data table.
        var data = new google.visualization.DataTable();
        data.addColumn('string', 'Programming language');
        data.addColumn('number', 'Response count');
        data.addRows([
          ['Java', 93],
          ['Ruby + Rails', 85],
          ['JavaScript', 103],
          ['PHP', 32],
          ['Python', 41],
          ['Swift', 14],
          ['Scala', 7],
          ['Perl', 10],
          ['SQL', 3],
          ['Objective-C', 4]
        ]);

        // Set chart options
        var options = {
                        'title':'What language does your team work in?',
                        'width': 500,
                        'height': 400,
                        'colors': [
                          '#fbc547',
                          '#fbca59',
                          '#fbd06b',
                          '#fcd67e',
                          '#fcdc90',
                          '#fde2a3',
                          '#fde7b5', 
                          '#fdedc7',
                          '#fef3da',
                          '#fef9ec'
                        ]
                      };

        // Instantiate and draw our chart, passing in some options.
        var chart = new google.visualization.PieChart(document.getElementById('language_chart_div'));
        chart.draw(data, options);
      }
    </script>

    <%= stylesheet_link_tag "site" %>
    <%= javascript_include_tag "site" %>
  </head>

  <body class="<%= page_classes %>">
    <%= yield %>
  </body>

  <footer class="footer">
    <div>Made with ðŸ’› by <a href="https://www.twitter.com/vaidehijoshi">Vaidehi Joshi</a></div>
  </footer>
</html>
